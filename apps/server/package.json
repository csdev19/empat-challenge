    "start": "bun run src/index.ts",
    "start:prod": "./server"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@empat-challenge/auth": "workspace:*",
    "@empat-challenge/db": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.45.1",
    "elysia": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@empat-challenge/config": "workspace:*",
    "@empat-challenge/domain": "workspace:*",
    "@types/bun": "catalog:",
    "tsdown": "^0.16.5",
    "typescript": "^5"
  }
}
